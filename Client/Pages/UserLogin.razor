@page "/login"


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h3>Login with register</h3>
        <RadzenCard>
            <RadzenLogin AllowResetPassword="false" 
                            Login="@((args) => Login(args, "Login with register"))" 
                            Register="@((args) => Register("Login with register"))" Style="margin-bottom: 20px;" />
        </RadzenCard>
    </div>
    <div class="col-md-4"></div>
</div>


@code{
    string userName = "admin";
    string password = "admin";

    void Login(LoginArgs args, string name)
    {
        System.Console.WriteLine($"{name} -> Username: {args.Username} and password: {args.Password}");
        StateHasChanged();
    }

    void Register(string name)
    {
        System.Console.WriteLine($"{name} -> Register");
        StateHasChanged();
    }
}